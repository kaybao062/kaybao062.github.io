<div class="row">
  <div class="col">
    <h1 class="common-heading">
      Modifying the journal...
    </h1>

  </div>
</div>

<form action="/modify_journal/<%= @the_journal.id %>"  method="post" >
  <div class="mb-3">
    <h5 class="card-header" style="font-family: Marker Felt, fantasy;color: maroon"><label for="author_id_box"> Author ID </label></h5>
    <input type="text" id="author_id_box" name="query_author_id" class="form-control" value=<%= current_user.id%>>
  </div>

  <div class="mb-3">
    <h5 class="card-header" style="font-family: Marker Felt, fantasy;color: maroon"><label for="mood_box">Mood</label></h5>
    <input type="text" id="mood_box" name="query_mood" class="form-control" value=<%= @the_journal.mood %>>
  </div>

  <div class="mb-3">
    <h5 class="card-header" style="font-family: Marker Felt, fantasy;color: maroon"><label for="weather_box">Weather</label></h5>
    <input type="text"  id="weather_box" name="query_weather" rows="3" class="form-control" value=<%= @the_journal.weather %>>
</div>

  <div class="mb-3">
    <h5 class="card-header" style="font-family: Marker Felt, fantasy;color: maroon"><label for="date_box"> Date </label></h5>
    <input type="date" id="date_box" name="query_date" class="form-control" value=<%= @the_journal.date %>>
  </div>

  <div class="mb-3">
    <h5 class="card-header" style="font-family: Marker Felt, fantasy;color: maroon"><label for="title_box">Title</label></h5>
    <input type="text" id="title_box" name="query_title" class="form-control" value=<%= @the_journal.title %>>
  </div>

  <div class="mb-3">
    <h5 class="card-header" style="font-family: Marker Felt, fantasy;color: maroon"><label for="content_box">Content</label></h5>
    <textarea id="content_box" name="query_content" rows="3" class="form-control" ><%= @the_journal.content %></textarea>
  </div>

  <div class="mb-3">
    <h5 class="card-header" style="font-family: Marker Felt, fantasy;color: maroon"> <label for="image_box">Image</label></h5>
    <input type="text" id="image_box" name="query_image" class="form-control" value=<%= @the_journal.image %>>
  </div>

  <button>
    Update journal
  </button>

</form>
</div>
</div>

