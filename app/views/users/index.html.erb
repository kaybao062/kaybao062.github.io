<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user
    </h2>

    <form action="/insert_user" method="post">
      <div>
        <label for="cnet_id_box">
          Cnet
        </label>

        <input type="text" id="cnet_id_box" name="query_cnet_id">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="password_box">
          Password
        </label>

        <input type="text" id="password_box" name="query_password">
      </div>

      <div>
        <label for="enroll_date_box">
          Enroll date
        </label>

        <input type="date" id="enroll_date_box" name="query_enroll_date">
      </div>

      <div>
        <label for="graduate_date_box">
          Graduate date
        </label>

        <input type="date" id="graduate_date_box" name="query_graduate_date">
      </div>

      <button>
        Create user
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cnet
        </th>

        <th>
          Name
        </th>

        <th>
          Password
        </th>

        <th>
          Enroll date
        </th>

        <th>
          Graduate date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>

        <td>
          <%= a_user.cnet_id %>
        </td>

        <td>
          <%= a_user.name %>
        </td>

        <td>
          <%= a_user.password %>
        </td>

        <td>
          <%= a_user.enroll_date %>
        </td>

        <td>
          <%= a_user.graduate_date %>
        </td>

        <td>
          <%= time_ago_in_words(a_user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
