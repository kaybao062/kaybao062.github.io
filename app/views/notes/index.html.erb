<div>
  <div>
    <h1>
      My notes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Course
        </th>

        <th>
          Image
        </th>

        <th>
          Student
        </th>

        <th>
          Title
        </th>

        <th>
          Content
        </th>

        <th>
          Questions
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_notes.each do |a_note| %>
      <tr>
        <td>
          <%= a_note.id %>
        </td>

        <td>
          <%= a_note.course_id %>
        </td>

        <td>
          <%= a_note.image %>
        </td>

        <td>
          <%= a_note.student_id %>
        </td>

        <td>
          <%= a_note.title %>
        </td>

        <td>
          <%= a_note.content %>
        </td>

        <td>
          <%= a_note.questions %>
        </td>

        <td>
          <%= time_ago_in_words(a_note.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_note.updated_at) %> ago
        </td>

        <td>
          <a href="/notes/<%= a_note.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
