<div>
  <div>
    <h1>
      Note #<%= @the_note.id %> details
    </h1>

    <div>
      <div>
        <a href="/notes">
          Go back
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Course
      </dt>
      <dd>
        <%= @the_note.course_id %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_note.image %>
      </dd>

      <dt>
        Student
      </dt>
      <dd>
        <%= @the_note.student_id %>
      </dd>

      <dt>
        Title
      </dt>
      <dd>
        <%= @the_note.title %>
      </dd>

      <dt>
        Content
      </dt>
      <dd>
        <%= @the_note.content %>
      </dd>

      <dt>
        Questions
      </dt>
      <dd>
        <%= @the_note.questions %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_note.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_note.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


  <div>
    <a href="/notes/update_page/<%= @the_note.id %>">Edit the note</a>
  </div>

  <div>
    <a href="/delete_note/<%= @the_note.id %>">
      Delete the note
    </a>
  </div>
