<h1>Modifying the note...</h1>
    <form action="/modify_note/<%= @the_note.id %>"  method="post" >
      <div>
        <label for="course_id_box">
          Course
        </label>

        <input type="text" id="course_id_box" name="query_course_id" value="<%= @the_note.course_id %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_note.image %>">
      </div>

      <div>
        <label for="student_id_box">
          Student
        </label>

        <input type="text" id="student_id_box" name="query_student_id" value="<%= @the_note.student_id %>">
      </div>

      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_note.title %>">
      </div>

      <div>
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content"><%= @the_note.content %></textarea>
      </div>

      <div>
        <label for="questions_box">
          Questions
        </label>

        <textarea id="questions_box" name="query_questions"><%= @the_note.questions %></textarea>
      </div>

      <button>
        Update note
      </button>
    </form>
