<div>
  <div>
    <h1>
      List of all homeworks
    </h1>
  </div>
</div>

<hr>


<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Course
        </th>

        <th>
          Due date
        </th>

        <th>
          Estimated time
        </th>

        <th>
          File path
        </th>

        <th>
          Instruction
        </th>

        <th>
          Questions
        </th>

        <th>
          Student
        </th>

        <th>
          Progress
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_homeworks.each do |a_homework| %>
      <tr>
        <td>
          <%= a_homework.id %>
        </td>

        <td>
          <%= a_homework.course_id %>
        </td>

        <td>
          <%= a_homework.due_date %>
        </td>

        <td>
          <%= a_homework.estimated_time %>
        </td>

        <td>
          <%= a_homework.file_path %>
        </td>

        <td>
          <%= a_homework.instruction %>
        </td>

        <td>
          <%= a_homework.questions %>
        </td>

        <td>
          <%= a_homework.student_id %>
        </td>

        <td>
          <%= a_homework.progress %>
        </td>

        <td>
          <%= time_ago_in_words(a_homework.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_homework.updated_at) %> ago
        </td>

        <td>
          <a href="/homeworks/<%= a_homework.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
